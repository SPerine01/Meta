<!-- Page Header -->
    <header class="intro-header header1">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>meta</h1>
                        <hr class="small">
                        <span class="subheading">Let shit out. Get shit done.</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

           <% @post.each do |post| %>

                <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
							<%= link_to post.title, post_path(post) %>
                        </h2>
                    </a>
                    <p class="post-meta">
                    	<%= link_to "Edit", edit_post_path(post) %>  | 
                    	<%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>
                    </p>
                </div>
                <hr>
                <% end %>

            </div>
        </div>
    </div>


